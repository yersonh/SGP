{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "bash .platform/scripts/build-votaciones.sh"
  },
  "deploy": {
    "startCommand": "bash .platform/scripts/start-votaciones.sh",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10,
    "restartPolicyType": "ON_FAILURE"
  }
}